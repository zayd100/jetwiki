{
  "version": 2,
  "builds": [
    {
      "src": "front-end/vite.config.js",
      "use": "@vercel/vite",
      "config": {
        "distDir": "front-end/dist"
      }
    },
    {
      "src": "back-end/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/back-end/server.js"
    },
    {
      "src": "/images/(.*)",
      "dest": "/back-end/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/front-end/dist/index.html",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}